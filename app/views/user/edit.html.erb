

<div class="clearfix">                          
    <div class="outer-div">
        <div class="inner-div">      
            <div class="floating-div">
              
<center><%= image_tag("bot.png", :alt => "bot") %></center>
                <div class="form-style-2">
                  <div class="form-style-2-heading">Залишилось не багато!!! Мені потрібно трішки інформації про тебе:</div>
                      <%= simple_form_for @user do |f| %>
                      <%= f.input :first_name, :input_html => {:maxlength => 25, :size => 32,:class => 'input-field' } %>
                      <%= f.input :last_name, :input_html => {:maxlength => 25, :size => 32, :class => 'input-field' } %>
                      <%= f.input :company, :input_html => {:maxlength => 25, :size => 32,:class => 'input-field' } %>
                      <%= f.input :adress, :input_html => {:maxlength => 30, :size => 32, :class => 'input-field' } %>
                      <%= f.input :room, :input_html => {:maxlength => 10, :size => 32, :class => 'input-field' } %>
                      <%= f.input :phone_number, :input_html => {:maxlength => 15, :size => 32,:class => 'input-field' } %>

                      <%= f.button :submit %>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
